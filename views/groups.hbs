{{#if groups.length}}
<table class="table table-dark">
    <thead>
        <tr>
            <th>Name</th>
            <th>Group Id</th>
        </tr>
    </thead>
    <tbody>
        {{#each groups}}
        <tr>
            <th>{{name}}</th>
            <th>{{id}}</th>
        </tr>
        {{/each}}
    </tbody>
</table>

{{else}}
<p>No groups yet</p>
{{/if}}
<a href="groups/add" class="btn btn-outline-info">Add</a>